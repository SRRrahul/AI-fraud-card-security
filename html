<!DOCTYPE html>
<html>
<head>
  <title>Fraud Detection UI</title>
</head>
<body>
  <h2>Credit Card Fraud Check</h2>
  <input type="text" id="amount" placeholder="Enter transaction amount" />
  <button onclick="checkFraud()">Check</button>
  <p id="result"></p>

  <script>
    function checkFraud() {
      const amount = document.getElementById('amount').value;
      // Simple rule-based simulation
      if (parseFloat(amount) > 1000) {
        document.getElementById('result').textContent = "⚠️ Potential fraud detected!";
      } else {
        document.getElementById('result').textContent = "✅ Transaction looks safe.";
      }
    }
  </script>
</body>
</html>
